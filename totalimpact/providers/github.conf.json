{
    ###################################################################
    # GITHUB PROVIDER CONFIGURATION
    ###################################################################
    
    # Provider Identifier - used as the "id" of any resulting metrics
    # object
    #
    "id" : "github",
    
    # Namespaces supported by this provider
    #
    "supported_namespaces" : ["github"],
    
    "metrics" : {
        "url" : "https://github.com/api/v2/json/repos/show/%s"
    },
    
    "member_items" : {
        "querytype" : {
            "github_user": {
                "url": "https://api.github.com/users/%s/repos"
            }
        }
    },

    "cache" : {
        "max_cache_duration" : 86400
    },

    "errors" : {
        "timeout" : { "retries" : 1, "retry_delay" : 0, "retry_type" : "linear", "delay_cap" : -1 },
        "http_error" : { "retries" : 1, "retry_delay" : 0, "retry_type" : "linear", "delay_cap" : -1 },
        "content_malformed" : { "retries" : 1, "retry_delay" : 0, "retry_type" : "linear", "delay_cap" : -1 },
        "rate_limit_reached" : { },
        "client_server_error" : { },
        "validation_failed" : { }
    }
}

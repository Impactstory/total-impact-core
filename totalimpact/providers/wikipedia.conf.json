{
    ###################################################################
    # WIKIPEDIA PROVIDER CONFIGURATION
    ###################################################################
    
    # Provider Identifier - used as the "id" of any resulting metrics
    # object
    #
    "id" : "wikipedia",
    
    # Namespaces supported by this provider
    #
    "supported_namespaces" : ["doi"],
    
    # Wikipedia API configuration for retrieving metrics
    #
    "metrics" : {
        "url" : "http://en.wikipedia.org/w/api.php?action=query&list=search&srprop=timestamp&format=xml&srsearch='%s'",
        "timeout" : 5,
        "provenance_url" : "http://en.wikipedia.org/wiki/Special:Search?search='%s'&go=Go"
    },
    
    # Meta information block for this provider to be included as-is in the
    # resulting metrics objects
    #
    "static_meta" : {
        "display_name": "mentions",
        "provider": "Wikipedia",
        "provider_url": "http://www.wikipedia.org/",
        "description": "Wikipedia is the free encyclopedia that anyone can edit.",
        "icon": "http://wikipedia.org/favicon.ico",
        "category": "NA",
        "can_use_commercially": "NA",
        "can_embed": "NA",
        "can_aggregate": "NA",
        "other_terms_of_use": "NA"
    },
    
    "errors" : {
        "timeout" : { "retries" : 1, "retry_delay" : 0, "retry_type" : "linear", "delay_cap" : -1 },
        "http_error" : { "retries" : 1, "retry_delay" : 0, "retry_type" : "linear", "delay_cap" : -1 },
        "content_malformed" : { "retries" : 1, "retry_delay" : 0, "retry_type" : "linear", "delay_cap" : -1 },
        
        # Not used by the wikipedia provider
        "rate_limit_reached" : { },
        "client_server_error" : { },
        "validation_failed" : { }
    },

    "cache" : {
        "max_cache_duration" : 86400 
    }
}
